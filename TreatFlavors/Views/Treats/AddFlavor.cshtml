@{
  Layout = "_Layout";
}
@model TreatFlavors.Models.Treat

<h3>Add a flavor to this treat: @Html.DisplayFor(model => model.TreatName)</h3>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.TreatId)

  @Html.Label("Select Flavor")
  @Html.DropDownList("FlavorId")

  <input type="submit" value="Save" class="btn btn-success btn-sm" />
}
<br>
<p>@Html.ActionLink("Cancel", "Details", null, new {id = Model.TreatId}, new {@class="btn btn-info btn-sm"})</p>