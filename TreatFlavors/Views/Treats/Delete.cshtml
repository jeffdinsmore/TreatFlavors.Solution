@{
  Layout = "_Layout";
}

@model TreatFlavors.Models.Treat

<h2>Are you sure you want to delete this treat?</h2>

@Html.DisplayName("Treat"): @Html.DisplayFor(model => model.TreatName)
<br><br>
@using (Html.BeginForm())
{
  <p><input type="submit" value="Delete" class="btn btn-danger btn-sm" /></p>
}

<p>@Html.ActionLink("Cancel", "Details", null, new {id = Model.TreatId }, new {@class="btn btn-info btn-sm"})</p>