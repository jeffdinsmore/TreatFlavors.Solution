@{
  Layout = "_Layout";
}

@model TreatFlavors.Models.Treat

<h2>Edit</h2>

<h4>Edit this treat: @Html.DisplayFor(model => model.TreatName)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.TreatId)

  @Html.Label("Treat Name")
  @Html.EditorFor(model => model.TreatName)

  <input type="submit" value="Save" class="btn btn-success btn-sm" />
}
<br>
<p>@Html.ActionLink("Cancel", "Details", null, new {id = Model.TreatId }, new {@class="btn btn-info btn-sm"})</p>