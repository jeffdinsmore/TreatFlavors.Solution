@{
  Layout = "_Layout";
}

<h2 class="jumbotron">Welcome to Pierre's Sweet & Savory Treats!</h2>
<div class="row">
  <div class="col-md-5">
    <h5>Treats available:</h5>
    @if (ViewBag.Treat.Count == 0)
    {
      <h5>Pierre does not have any Treats today!</h5>
    }
    else
    {
      @foreach (var treat in ViewBag.Treat)
      {
        <li>&nbsp; - &nbsp; @treat.TreatName</li>
      }
    }

    <br>
    <p>@Html.ActionLink("Go To Treats", "Index", "Treats", null, new {@class="btn btn-info btn-sm"})</p>
  </div>
  <div class="col-md-5">
    <h5>Flavors available:</h5>
    @if (ViewBag.Flavor.Count == 0)
    {
      <h5>Pierre does not have any Flavors today!</h5>
    }
    else
    {
      @foreach (var flavor in ViewBag.Flavor)
      {
        <li>&nbsp; - &nbsp; @flavor.FlavorName</li>
      }
    }

    <br>
    <p>@Html.ActionLink("Go To Flavors", "Index", "Flavors", null, new {@class="btn btn-info btn-sm"})</p>
  </div>
</div>

<br>
