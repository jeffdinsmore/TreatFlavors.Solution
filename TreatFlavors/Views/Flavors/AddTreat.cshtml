@{
  Layout = "_Layout";
}
@model TreatFlavors.Models.Flavor

<h3>Add a treat to this flavor: @Html.DisplayFor(model => model.FlavorName)</h3>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.FlavorId)

  @Html.Label("Select Treat")
  @Html.DropDownList("TreatId")

  <input type="submit" value="Save" class="btn btn-success btn-sm" />
}
<br>
<p>@Html.ActionLink("Cancel", "Details", null, new {id = Model.FlavorId}, new {@class="btn btn-info btn-sm"})</p>