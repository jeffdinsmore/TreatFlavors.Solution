@{
  Layout = "_Layout";
}
@model TreatFlavors.Models.Flavor

<br>
<h4>Add a new Flavor</h4>
@using (Html.BeginForm())
{
  @Html.Label("Flavor Name")
  @Html.TextBoxFor(model => model.FlavorName, new{@Required = true})

  <input type="submit" value="Add new Flavor" class="btn btn-success btn-sm" />
}
<br>
<p>@Html.ActionLink("Cancel", "Index", null, null, new {@class="btn btn-info btn-sm"})</p>